<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UrnikFragment">


    <Button
        android:id="@+id/btn_dan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_teden"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_teden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEDEN"
        app:layout_constraintEnd_toStartOf="@+id/btn_dan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_mesec"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mesec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESEC"
        app:layout_constraintEnd_toStartOf="@+id/btn_teden"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/flUrnikFrameFragment"
        android:layout_width="match_parent"
        android:layout_height="683dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mesec">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>