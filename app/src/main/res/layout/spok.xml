<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/spok_title"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="@string/spok_ime"
                android:inputType="textCapWords"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="@string/spok_priimek"
                android:inputType="textCapWords"
                />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/spok_naslov"
        android:inputType="textCapWords"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/spok_katastrska"
        android:inputType="textCapWords"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/spok_panoga"
        android:inputType="textCapWords"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:hint="@string/spok_drugo"
        android:inputType="textCapWords"
        />

    <Button
        android:id="@+id/btn_spok_shrani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/spok_shrani"
        />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btn_spok"
            android:background="@drawable/icon1"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:onClick="startActivitySPOK"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:id="@+id/btn_urnik"
            android:background="@drawable/icon2"
            android:layout_height="44dp"
            android:layout_width="44dp"
            android:layout_toEndOf="@+id/btn_spok"
            android:onClick="startActivityURNIK"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:id="@+id/btn_razpisi"
            android:background="@drawable/icon33"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_toEndOf="@+id/btn_urnik"
            android:onClick="startActivityRAZPISI"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>